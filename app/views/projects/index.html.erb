<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.project.name %></td>
        <td><%= team.project.description %></td>
        <td><%= team.project.team.name %></td>
        <td><%= link_to 'Show', team.project %></td>
        <td><%= link_to 'Edit', edit_project_path(team.project) %></td>
        <td><%= link_to 'Destroy', team.project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
