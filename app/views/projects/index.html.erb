<div class="page_content container">

  <h1>Projects</h1>

  <table class="table table-striped center">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Team</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.project.name %></td>
          <td><%= team.project.description %></td>
          <td><%= team.project.team.name %></td>
          <td><%= link_to 'Show', team.project, :class=>"btn btn-info button" %></td>
          <td><%= link_to 'Edit', edit_project_path(team.project), :class=>"btn btn-warning button" %></td>
          <td><%= link_to 'Destroy', team.project, method: :delete, data: { confirm: 'Are you sure?' },:class=>"btn btn-danger button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'back', @user, :class=>"btn btn-warning button" %>
  <%= link_to 'New Project', new_project_path, :class=>"btn btn-primary button" %>

</div>
