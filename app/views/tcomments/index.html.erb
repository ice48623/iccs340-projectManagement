<p id="notice"><%= notice %></p>

<h1>Tcomments</h1>

<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>User</th>
      <th>Task</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tcomments.each do |tcomment| %>
      <tr>
        <td><%= tcomment.content %></td>
        <td><%= tcomment.user.name %></td>
        <td><%= tcomment.task.name %></td>
        <td><%= link_to 'Show', task_tcomment_path(:id => tcomment.id) %></td>
        <td><%= link_to 'Edit', edit_task_tcomment_path(:id => tcomment.id) %></td>
        <td><%= link_to 'Destroy', task_tcomment_path(:id => tcomment.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tcomment', new_task_tcomment_path %>
