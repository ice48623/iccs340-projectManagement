<div class="task_form">
  <%= form_for(task) do |f| %>
    <% if task.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

        <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :name %>
      <%= f.text_area :name %>
    </div>

    <div class="field">
      <%= f.label :description %>
      <%= f.text_area :description %>
    </div>

    <div class="field">
      <%= f.label :status %>
      <%= f.select :status, ['pending', 'in-progess', 'testing', 'complete'], :selected => @status %>
    </div>

    <div class="field">
      <%= f.label :project_id %>
      <%= f.text_field :project_id, :value => @project_id, :readonly => @read_only %>
    </div>

    <div class="actions">
      <%= f.submit :class=>"btn btn-primary button"%>
    </div>
  <% end %>

</div>
