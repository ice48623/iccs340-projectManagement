<div class="task_index page_content">

  <h1>Tasks</h1>

  <table class="table table-striped center">
    <thead>
      <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Status</th>
        <th>Project</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.name %></td>
          <td><%= task.description %></td>
          <td><%= task.status %></td>
          <td><%= task.project.name %></td>
          <td><%= link_to 'Show', task, :class=>"btn btn-info button" %></td>
          <td><%= link_to 'Edit', edit_task_path(task), :class=>"btn btn-warning button" %></td>
          <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, :class=>"btn btn-danger button" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>

  <%= link_to 'New Task', new_task_path, :class=>"btn btn-primary button" %>

</div>
