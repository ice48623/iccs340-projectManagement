<div class="page_content">
  <% provide(:title, @user.name) %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <h1>
          <%= gravatar_for @user %>
          <%= @user.name %>
        </h1>
      </section>
      <h3>Current Teams: <%= @team_count %></h3>
      <h3>Current Projects: <%= @project_count %></h3>
    </aside>
  </div>
</div>
